@model IEnumerable<DoktormandenDk.Models.Appointment>

@{
    ViewData["Title"] = "Tidsbestillinger";
}

<h1>Dine tider</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-file-earmark-plus"></i> Bestil ny tid </a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentMessage)
            </th>
            <th>
                Lægens navn
            </th>
             <th>
                Patientens navn
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.AppointmentMessage)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.GP.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.Name)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.AppointmentTime)
                </td>
            <td>
                <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.AppointmentId">Detaljer</a>
                <a class="btn btn-outline-dark" asp-action="Delete" asp-route-id="@item.AppointmentId">Slet</a>
            </td>
        </tr>
}
    </tbody>
</table>
