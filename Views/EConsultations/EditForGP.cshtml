

@model DoktormandenDk.Models.EConsultation

@{
    ViewData["Title"] = "Besvar";
}

<h1>Svar patient</h1>

<h4>E-Konsultation</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="EditForGP">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GPId" />
            <input type="hidden" asp-for="PatientId" />
            <input type="hidden" asp-for="EConsultationId" />
            <input type="hidden" asp-for="AnswerTime"  />
            <input type="hidden" asp-for="QuestionTime" />
            <input type="hidden" asp-for="Question" />

            <div class="form-group">
                <label asp-for="GPId" class="control-label fw-bold">Læge:</label>
                @Html.DisplayFor(model => model.GP.Name)
            </div>

            <div class="form-group">
                <label asp-for="Patient.Name" class="control-label fw-bold">Patient:</label>
                @Html.DisplayFor(model => model.Patient.Name)
            </div>            
            
            <div class="form-group">
                @Html.LabelFor(model => model.QuestionTime)
                @Html.DisplayFor(model=>model.QuestionTime)
            </div>
            <div class="form-group">
                <label asp-for="Question" class="control-label fw-bold">Besked fra patienten</label>
                @Html.TextAreaFor(m => m.Question, new {@class="form-control" , disabled="disabled"}   )
            </div>

            <div class="form-group">
                <label asp-for="Answer" class="control-label fw-bold">Svar</label>
                @Html.TextAreaFor(m => m.Answer, new {@class="form-control",@rows=8, @cols=40 })

            </div>

            <div class="form-group my-2">
                <input type="submit" value="Besvar" class="btn btn-primary" />
            </div>
           


        </form>
    </div>

</div>


<div>
    <a class="btn btn-outline-dark" asp-action="Index">Tilbage til listen</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
