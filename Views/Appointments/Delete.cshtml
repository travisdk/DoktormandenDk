@model DoktormandenDk.Models.Appointment

@{
    ViewData["Title"] = "Aflys tid";
}

<h1>Aflyse</h1>

<h3>Er du sikker på du ønsker at aflyse tiden?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AppointmentTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AppointmentTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AppointmentMessage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AppointmentMessage)
        </dd>
        <dt class = "col-sm-2">
            Patient
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.Name)
        </dd>
        <dt class = "col-sm-2">
            Læge
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GP.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AppointmentId" />
        <input type="submit" value="Aflys" class="btn btn-danger" /> |
        <a asp-action="Index">Tilbage til listen</a>
    </form>
</div>
